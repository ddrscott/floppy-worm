{
  "name": "floppy-worm",
  "version": "0.2.2",
  "description": "Physics-based worm game using Phaser and Matter.js",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "start": "remix vite:dev",
    "build": "remix vite:build --config vite.config.prod.ts",
    "build:itch": "vite build --config vite.config.itch.ts && mv build/itch/itch.html build/itch/index.html && sed -i '' 's|src=\"/assets/|src=\"./assets/|g' build/itch/index.html",
    "zip": "npm run build:itch && cd build/itch && zip -r ../floppy-worm-v$(jq -r .version ../../package.json).zip . && echo \"Created build/floppy-worm-v$(jq -r .version ../../package.json).zip\"",
    "dev": "remix vite:dev",
    "preview": "vite preview",
    "preview:itch": "vite preview --config vite.config.itch.ts --outDir build/itch",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@remix-run/node": "^2.16.8",
    "@remix-run/react": "^2.16.8",
    "@remix-run/serve": "^2.16.8",
    "dat.gui": "^0.7.9",
    "isbot": "^4.1.0",
    "matter-attractors": "^0.1.6",
    "phaser": "^3.90.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.16.8",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.38",
    "process": "^0.11.10",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^4.2.1",
    "zzfx": "^1.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
